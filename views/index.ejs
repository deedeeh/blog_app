<% include partials/header %>

<h1 class='header'>Welcome to blogs</h1>

<% blogs.forEach(blog => { %>
  <div>
    <h2><%= blog.title %></h2>
    <img class='image' src='<%= blog.image %>'>
    <span><%= blog.created %></span>
    <p><%= blog.body.substring(0, 150) %>...</p>
    <a href="/blogs/<%= blog._id %>">Read More</a>
  </div>
<% }) %>

<% include partials/footer %>